/ insert_before "[data-hook='admin_order_form_buttons']"

%fieldset.no-border-bottom
  %legend{align: 'center'} Phân phối

  - if @order.complete?
    .alpha.six.columns
      %p
        %b Nhà phân phối:
        = f.object.distributor.andand.name || "Chưa có"
        = f.hidden_field :distributor_id
    .omega.six.columns
      %p
        %b Chu kỳ đặt hàng:
        = f.object.order_cycle.andand.name || "Chưa có"
        = f.hidden_field :order_cycle_id

  - else
    .alpha.six.columns
      .field
        %label{for: "order_distributor_id"} Nhà phân phối
        %input.ofn-select2.fullwidth{id: "order_distributor_id",
        type: 'number',
        name: "order[distributor_id]",
        "ng-model" => 'distributor_id',
        data: "shops" }

    .omega.six.columns
      .field
        %label{ for: "order_order_cycle_id"} Chu kỳ đặt hàng
        %input.ofn-select2.fullwidth{id: "order_order_cycle_id",
        type: 'number',
        name: "order[order_cycle_id]",
        "ng-model" => 'order_cycle_id',
        "ng-disabled" => "!distributor_id",
        data: "orderCycles",
        text: "name_and_status",
        filter: "validOrderCycle" }
